{% extends 'base.html.twig' %}

{% block title %}{{'contact.index'|trans()}}{% endblock %}

{% block body %}
    <h1>{{'contact.index'|trans()}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'contact_field.name'|trans({},'ui')}}</th>
                <th>{{'contact_field.email'|trans({},'ui')}}</th>
                <th>{{'contact_field.message'|trans({},'ui')}}</th>
                <th>{{'actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.name }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a href="{{ path('app_contact_show', {'id': contact.id}) }}">{{'show'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{'no_records_found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination justify-content-center mt-4">
        {{ knp_pagination_render(contacts) }}
    </div>
{% endblock %}
