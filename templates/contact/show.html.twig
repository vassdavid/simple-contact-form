{% extends 'layouts/admin.html.twig' %}

{% block title %}{{'contact_title'|trans({},'ui')}}{% endblock %}

{% block main %}
    <h1>{{'contact_title'|trans({},'ui')}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>{{ 'contact_field.name'|trans({},'ui') }}</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>{{ 'contact_field.email'|trans({}, 'ui') }}</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>{{ 'contact_field.message'|trans({}, 'ui') }}</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between">
        <a class="btn btn-link" href="{{ path('app_contact_index') }}">{{'contact_back_to_list'|trans({},'ui')}}</a>
        {{ include('contact/_delete_form.html.twig') }}
    </div>

{% endblock %}
